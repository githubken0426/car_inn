<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="inn.shopping.api.dao.ExpertTypeMapper" >
  <sql id="Base_Column_List" >
    id, type_value, description, delete_flag, 
    date_format(insert_time,'%Y-%m-%d') as insert_time,
    date_format(update_time,'%Y-%m-%d') as update_time
  </sql>
  
  <!-- 查询所有数据 -->
  <select id="queryAllData" resultType="inn.shopping.api.entity.ExpertType" >
    select <include refid="Base_Column_List" /> from tb_expert_type
  </select>
  
  <select id="selectByPrimaryKey" resultType="inn.shopping.api.entity.ExpertType" parameterType="java.lang.String" >
    select 
    <include refid="Base_Column_List" />
    from tb_expert_type
    where id = #{id,jdbcType=VARCHAR}
  </select>
  
</mapper>